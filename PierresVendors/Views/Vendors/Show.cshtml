<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Pierres Vendors</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  @using PierresVendors.Models;

  <h3>Here are all the order for the vendor @Model.Name:</h3>

  <ol>
    @foreach (OrderItem orders in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendors"].Id/orders/@orders.Id'>@orders.Name</a></li>
    }
  </ol>
  <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
  <p><a href='/vendors'>Return to vendor list</a></p>
  <p><a href='/'>Return to Main Page</a></p>
</body>

</html>